local GravLibrary = {}

local random = Random.new()
local letters = {'a','b','c','d','e','f','g','h','i','j','k','l','m','n','o','p','q','r','s','t','u','v','w','x','y','z'}

local function getRandomLetter()
	return letters[random:NextInteger(1,#letters)]
end

local function getRandomString(length, includeCapitals)
	local length = length or 10
	local str = ''
	for i=1,length do
		local randomLetter = getRandomLetter()
		if includeCapitals and random:NextNumber() > .5 then
			randomLetter = string.upper(randomLetter)
		end
		str = str .. randomLetter
	end
	return str
end

function GravLibrary:SetNoGravity(HumanoidRootPart)
    local NoGravity = {}

    local BodyVelocity = Instance.new("BodyVelocity", HumanoidRootPart)
    BodyVelocity.Velocity = Vector3.new(0, 0, 0)
    local BName = getRandomString(5,true)
    BodyVelocity.Name = BName

    function NoGravity:Remove()
	pcall)function()
        BodyVelocity:Destroy()
	end)
    end
    return NoGravity
end

return GravLibrary
